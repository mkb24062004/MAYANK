//EXPERIMENT: 7
//AIM: Plot a scalar field and its gradient
//MAYANK BARMAN
//8562
clc;
clear;
clf;
// Create a grid of x, y points
x = linspace(-2, 2, 10);
y = linspace(-2, 2, 10);
[X, Y] = meshgrid(x, y);
// Define a scalar field function: f(x, y)
function z=f(x, y)
z = x.^2+y.^2
endfunction
//Z = f(X, Y);
contour(x, y, f, 5);
fx = 2.*X
fy = 2.*Y
champ(x,y,fx',fy')
